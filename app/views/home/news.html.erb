<div class="transparent_overlay"></div>
<div class="container_24 wrap">

  <div class="header">
    <div class="temp">
      <div id="logo-container">
        <div class="logo" style="font-size: 50px; line-height: 70px;"><%= link_to "Electronic Music 4 Ever", root_path, :title => "Electronic Music 4 Ever" %>
        </div>
      </div>

      <ul id="nav">
        <li class="active">
            <a href="/" id="widget1"></a>
         </li>
         <li>
            <a href="/about" id="widget2">About</a>
         </li>
         <li>
            <a href="/news" id="widget3">News</a>
         </li>
         <li>
            <a href="/gallery" id="widget4">Gallery</a>
         </li>
         <li>
            <a href="/contact" id="widget5">Contact</a>
         </li>
      </ul>

      <div class="social" style="width:20%">
        <a href="https://plus.google.com/115808384490128467572" rel="publisher" target="_blank"><%= image_tag "google-plus-4-256.ico", style: "max-width:52%" %></a>
        <a href="http://facebook.com/231320383554518" title="Facebook Page!" target="_blank"><%= image_tag "facebook.png" %></a>
      </div>

      <div class="fix"></div>
      <a href="/news#" id="pull">Navigation</a><!--switching menus for mobile-->
    </div>

    <div class="footer">
      <div class="left">© Electronic Music 4 Ever</div>
      <div class="fix"></div>
    </div>
  </div><!-- Header Ends -->

  <div class="grid_15 alpha omega push_10 with_border">
    <!-- content_holder starts -->
    <div id="content_holder">
      <div class="subholder">
        <h2>News</h2>   

        <ul class="updates">
          <% news.each do |post_wrapper| %>
            <li>
              <div class="date"><%= time_ago_in_words(post_wrapper.created_at) %> ago:</div>
              <div class="post">
                <div class="full_post">
                  <%= post_wrapper.title %>

                  <br/>
                  <% if post_wrapper.post_type == "video" %>
                    <iframe width="560" height="349" src="<%= post_wrapper.video_url %>" frameborder="0" allowfullscreen></iframe>
                  <% elsif post_wrapper.post_type == "photo" %>
                    <%= image_tag post_wrapper.image_url %>
                  <% end %>
                </div>

                <% if post_wrapper.post_type == "video" %>
                  <div class="more"><a href="<%= post_wrapper.video_url %>" target="_blank"><span>See video</span></a></div>
                <% elsif post_wrapper.post_type == "photo" %>
                  <div class="more"><a href="<%= post_wrapper.image_url %>" target="_blank"><span>See picture</span></a></div>
                <% end %>
              </div>
              <div class="fix"></div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <!-- content_holder ends -->

    <div class="to-be-hide"></div>
    <div class="footer2">
      <div class="left">© Electronic Music 4 Ever</div>
      <div class="fix"></div>
    </div>
  </div>

</div>

